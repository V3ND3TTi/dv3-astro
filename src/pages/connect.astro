---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout pageTitle="Let's Connect">
  <!-- CONNECT SECTION -->
  <section class='connect' id='connect'>
    <div class='max-width'>
      <h2 class='title'>Connect</h2>
      <div class='connect-content'>
        <div class='column left'>
          <div class='text'>Get in Touch</div>
          <p>
            Please don't hesitate to contact me with feedback about this site or
            just to say hi. You can also reach out via any of the social media
            links in the footer.
          </p>
          <div class='icons'>
            <div class='row'>
              <i class='fa-solid fa-user'></i>
              <div class='info'>
                <div class='head'>Name</div>
                <div class='sub-title'>Devon Vendetti</div>
              </div>
            </div>
            <div class='row'>
              <i class='fa-solid fa-location-dot'></i>
              <div class='info'>
                <div class='head'>City</div>
                <div class='sub-title'>Las Vegas, NV</div>
              </div>
            </div>
          </div>
        </div>
        <div class='column right'>
          <div class='text'>Message Me</div>
          <form name='contact' method='POST' data-netlify='true'>
            <div class='fields'>
              <div class='field name'>
                <input
                  type='text'
                  name='name'
                  id='name'
                  placeholder='Name'
                  required
                />
              </div>
              <div class='field email'>
                <input
                  type='email'
                  name='email'
                  id='email'
                  placeholder='Email'
                  required
                />
              </div>
            </div>
            <div class='field textarea'>
              <textarea
                name='message'
                id='message'
                cols='30'
                rows='10'
                placeholder='Describe Project...'
                required></textarea>
            </div>
            <div data-netlify-recaptcha='true'></div>
            <div class='button'>
              <button type='submit'>Send Message</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
